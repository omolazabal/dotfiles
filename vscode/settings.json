{
    // Editor
    "editor.lineNumbers": "relative",

    // Window
    "window.zoomLevel": 0,
    "window.restoreWindows": "none",

    // Workbench
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Atom One Dark",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.tabCloseButton": "left",
    "workbench.colorCustomizations": {
        "statusBar.background": "#325a41",
        "statusBar.noFolderBackground": "#325a41",
        "statusBar.debuggingBackground": "#325a41"
    },

    // Terminal
    "terminal.integrated.fontFamily": "Meslo LG S for Powerline",
    "terminal.integrated.fontSize": 14,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",

    // Python
    "python.linting.maxNumberOfProblems": 1000,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/Users/oscar/anaconda/bin/flake8",

    // Matlab
    "matlab.mlintpath": "/Applications/MATLAB_R2017a.app/bin/maci64/mlint",

    // Vim
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": "#325a41",
        "insert": "#2b3666",
        "visual": "#50335c",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    }
}
