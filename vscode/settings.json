{
    // Editor
    "editor.lineNumbers": "relative",

    // Window
    "window.zoomLevel": 0,
    "window.restoreWindows": "none",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "statusBar.background": "#325a41",
        "statusBar.noFolderBackground": "#325a41",
        "statusBar.debuggingBackground": "#325a41",
        "terminal.background": "#19191e"
    },

    // Terminal
    "terminal.integrated.fontFamily": "Meslo LG S for Powerline",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontWeight": "normal",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",

    // Python
    "python.linting.enabled": false,

    // Matlab
    "matlab.mlintpath": "/Applications/MATLAB_R2017a.app/bin/maci64/mlint",

    // Vim
    "vim.statusBarColorControl": true,
    "vim.cmdLineInitialColon": true,
    "vim.statusBarColors": {
        "normal": "#325a41",
        "insert": "#2b3666",
        "visual": "#50335c",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },

    // Files
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "One Dark Pro",
    "editor.minimap.enabled": false,
    "python.condaPath": "~/anaconda3/bin/python",
    "ai.azureml.enable": false,
    "ai.homepage.openOnStartup": false,
}
